<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:h="https://handyorg.github.io/handycontrol"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                    xmlns:uc="http://metro.mahapps.com/winfx/xaml/controls">

    <Style x:Name="CardText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#323d76"/>
        <Setter Property="FontSize" Value="35"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="Monserrat"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="95"/>
        <Setter Property="Margin" Value="20,15,0,10"/>
    </Style>

    <Style x:Key="Subtitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="DimGray"/>
        <Setter Property="Margin" Value="10,1,155,20"/>
        <Setter Property="Width" Value="40"/>
    </Style>

    <Style x:Key="CardImage" TargetType="UserControl">
        <Setter Property="Margin" Value="15,15,0,10"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="45"/>
    </Style>

    <Style x:Key="Whiteborder" TargetType="Border">
        <Setter Property="Background" Value="#a7c0e9"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Width" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="White"/>
        <!-- Aquí establece el color del borde -->
        <Setter Property="BorderThickness" Value="3"/>
        <!-- Agrega esto si deseas definir el grosor del borde -->
    </Style>

</ResourceDictionary>